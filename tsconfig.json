{
  "extends": "./tsconfig.isomorphic.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strictNullChecks": false,
    "rootDir": "./src",
    "paths": {
      "incremental-compiler": [
        "./src/lib"
      ],
      "incremental-compiler/*": [
        "./src/lib/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/assets"
  ]
}